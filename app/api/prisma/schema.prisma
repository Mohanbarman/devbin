generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

// MODELS //

enum Roles {
  ADMIN
  USER
  GUEST
}

model User {
  id        Int      @id @default(autoincrement())
  uuid      String   @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  firstName String
  lastName  String?
  email     String   @unique
  role      Roles    @default(USER)
  password  String
}
